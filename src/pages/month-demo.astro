---
import Month from "../components/month.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>Month Component Demo</title>
    </head>
    <body>
        <h1>Month Component Demo</h1>

        <h2>January 2024</h2>
        <Month month={0} year={2024} />

        <h2>February 2024</h2>
        <Month month={1} year={2024} />

        <h2>April 2024</h2>
        <Month month={3} year={2024} />

        <style>
            body {
                font-family: Arial, sans-serif;
                padding: 1rem;
                background-color: #f5f5f5;
            }

            h1 {
                color: #333;
                text-align: center;
                margin-top: 0.5rem;
            }

            h2 {
                color: #555;
                margin: 1rem 0 0.5rem 0;
            }

            .calendar-month {
                margin: 0.5rem 0;
            }
        </style>
    </body>
</html>
