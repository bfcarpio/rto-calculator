---
import MobileMenu from "./MobileMenu.astro";
---

<dialog id="settings-dialog" class="settings-modal" aria-labelledby="settings-title">
    <div class="modal-content">
        <header class="modal-header">
            <h2 id="settings-title">Settings</h2>
            <button class="close-button" aria-label="Close settings">&times;</button>
        </header>

        <div class="modal-body">
            <!-- Appearance Section -->
            <section class="settings-section">
                <h3>Appearance</h3>
                <div class="setting-row">
                    <div class="setting-info">
                        <span class="setting-label">Theme</span>
                        <span class="setting-description">Choose your preferred color scheme</span>
                    </div>
                    <button
                        id="theme-cycle-button"
                        class="theme-cycle-button"
                        aria-label="Cycle theme: System, Light, Dark"
                        title="Click to cycle theme"
                    >
                        <span id="theme-icon" class="theme-icon">üñ•Ô∏è</span>
                        <span id="theme-label" class="theme-label">System</span>
                    </button>
                </div>
            </section>

            <hr class="section-divider" />

            <!-- Target Days Section -->
            <section class="settings-section" id="target-days-section">
                <h3>Target Office Days</h3>
                <p class="section-description">
                    Set your minimum required days per week. Weeks with fewer days marked will
                    be flagged as violations.
                </p>

                <div class="setting-row">
                    <div class="setting-info">
                        <span class="setting-label">Minimum days per week</span>
                    </div>
                    <input
                        type="number"
                        id="target-days-input"
                        class="target-days-input"
                        min="0"
                        max="5"
                        value="3"
                        aria-label="Minimum office days per week"
                    />
                </div>
            </section>

            <hr class="section-divider" />

            <!-- Validation Mode Section -->
            <section class="settings-section" id="validation-mode-section">
                <h3>Validation Mode</h3>
                <p class="section-description">Choose how compliance is calculated.</p>

                <div class="radio-group">
                    <label class="radio-label">
                        <input
                            type="radio"
                            name="validationMode"
                            value="strict"
                            checked
                        />
                        <span class="radio-text">
                            <strong>Strict</strong> - Each week must individually meet the target
                        </span>
                    </label>
                    <label class="radio-label">
                        <input type="radio" name="validationMode" value="average4" />
                        <span class="radio-text">
                            <strong>4-Week Average</strong> - Compliance based on rolling 4-week
                            average
                        </span>
                    </label>
                    <label class="radio-label">
                        <input type="radio" name="validationMode" value="average12" />
                        <span class="radio-text">
                            <strong>12-Week Average</strong> - Compliance based on rolling 12-week
                            average
                        </span>
                    </label>
                </div>
            </section>

            <hr class="section-divider" />

            <!-- Week Labels Section -->
            <section class="settings-section" id="week-labels-section">
                <h3>Week Labels</h3>
                <p class="section-description">
                    Add labels to identify weeks (e.g., "Vacation", "Conference"). These don't
                    affect compliance calculation.
                </p>

                <div class="week-labels-container">
                    <div class="add-label-row">
                        <select id="week-select" class="week-select">
                            <option value="">Select week...</option>
                        </select>
                        <input
                            type="text"
                            id="week-label-input"
                            class="week-label-input"
                            placeholder="Label (e.g., Vacation)"
                            maxlength="30"
                        />
                        <button id="add-label-button" class="add-label-button" type="button">
                            Add
                        </button>
                    </div>
                    <ul id="labels-list" class="labels-list"></ul>
                </div>
            </section>

            <hr class="section-divider" />

            <!-- Data Management Section -->
            <section class="settings-section">
                <h3>Data</h3>
                <div class="setting-row">
                    <div class="setting-info">
                        <span class="setting-label">Export calendar data</span>
                        <span class="setting-description">Download your data as JSON</span>
                    </div>
                    <button id="export-button" class="action-button secondary" type="button">
                        Export
                    </button>
                </div>
                <div class="setting-row">
                    <div class="setting-info">
                        <span class="setting-label">Import calendar data</span>
                        <span class="setting-description">Restore from a previous export</span>
                    </div>
                    <button id="import-button" class="action-button secondary" type="button">
                        Import
                    </button>
                </div>
            </section>
        </div>
    </div>
</dialog>

<input type="file" id="import-file-input" accept=".json" style="display: none;" />

<!-- Mobile Menu Component -->
<MobileMenu />

<style>
    .settings-modal {
        border: none;
        border-radius: 12px;
        padding: 0;
        max-width: 600px;
        width: 90vw;
        max-height: 85vh;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    .settings-modal::backdrop {
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(4px);
    }

    .modal-content {
        display: flex;
        flex-direction: column;
        max-height: 85vh;
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid #e2e8f0;
        background: #f8fafc;
        border-radius: 12px 12px 0 0;
    }

    .modal-header h2 {
        margin: 0;
        font-size: 1.25rem;
        font-weight: 600;
        color: #1e293b;
    }

    .close-button {
        background: none;
        border: none;
        font-size: 1.75rem;
        line-height: 1;
        cursor: pointer;
        padding: 0.25rem 0.5rem;
        color: #64748b;
        border-radius: 4px;
        transition:
            background-color 0.2s ease,
            color 0.2s ease;
    }

    .close-button:hover {
        background: #e2e8f0;
        color: #1e293b;
    }

    .modal-body {
        padding: 1.5rem;
        overflow-y: auto;
        flex: 1;
    }

    .settings-section {
        margin-bottom: 1.5rem;
    }

    .settings-section:last-child {
        margin-bottom: 0;
    }

    .settings-section h3 {
        margin: 0 0 0.75rem 0;
        font-size: 1rem;
        font-weight: 600;
        color: #334155;
    }

    .section-description {
        margin: 0 0 1rem 0;
        font-size: 0.875rem;
        color: #64748b;
        line-height: 1.5;
    }

    .section-divider {
        border: none;
        height: 1px;
        background: #e2e8f0;
        margin: 1.5rem 0;
    }

    .setting-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        padding: 0.75rem 0;
    }

    .setting-info {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        flex: 1;
    }

    .setting-label {
        font-weight: 500;
        color: #334155;
    }

    .setting-description {
        font-size: 0.875rem;
        color: #64748b;
    }

    /* Theme Cycle Button */
    .theme-cycle-button {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        background: white;
        cursor: pointer;
        transition:
            border-color 0.2s ease,
            background-color 0.2s ease;
        font-size: 0.875rem;
        font-weight: 500;
        min-width: 120px;
        justify-content: center;
    }

    .theme-cycle-button:hover {
        border-color: #475569;
        background: #f8fafc;
    }

    .theme-cycle-button:active {
        background: #e2e8f0;
    }

    .theme-icon {
        font-size: 1rem;
    }

    .theme-label {
        color: #334155;
    }

    .target-days-input {
        width: 70px;
        padding: 0.5rem;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        font-size: 1rem;
        text-align: center;
        transition: border-color 0.2s ease;
    }

    .target-days-input:focus {
        outline: none;
        border-color: #475569;
    }

    .radio-group {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .radio-label {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        cursor: pointer;
        padding: 0.5rem;
        border-radius: 6px;
        transition: background-color 0.2s ease;
    }

    .radio-label:hover {
        background: #f8fafc;
    }

    .radio-label input[type='radio'] {
        margin-top: 0.25rem;
        cursor: pointer;
    }

    .radio-text {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        font-size: 0.875rem;
        color: #475569;
        line-height: 1.4;
    }

    .week-labels-container {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .add-label-row {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    .week-select {
        flex: 1;
        padding: 0.5rem;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        font-size: 0.875rem;
        background: white;
        min-width: 140px;
    }

    .week-label-input {
        flex: 2;
        padding: 0.5rem;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        font-size: 0.875rem;
    }

    .add-label-button {
        padding: 0.5rem 1rem;
        background: #475569;
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 500;
        white-space: nowrap;
        transition: background-color 0.2s ease;
    }

    .add-label-button:hover {
        background: #334155;
    }

    .labels-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .action-button {
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 500;
        cursor: pointer;
        transition:
            background-color 0.2s ease,
            border-color 0.2s ease;
    }

    .action-button.secondary {
        background: white;
        border: 2px solid #e2e8f0;
        color: #475569;
    }

    .action-button.secondary:hover {
        background: #f8fafc;
        border-color: #475569;
    }

    @media (max-width: 480px) {
        .settings-modal {
            width: 95vw;
            max-height: 90vh;
            margin: 0;
            border-radius: 12px;
        }

        .setting-row {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.75rem;
        }

        .add-label-row {
            flex-direction: column;
            align-items: stretch;
        }

        .week-select,
        .week-label-input,
        .add-label-button {
            width: 100%;
        }

        .theme-cycle-button {
            width: 100%;
            justify-content: center;
        }
    }

    /* Dark mode styles */
    :global(body.dark-mode) .modal-header {
        background: #1e293b;
        border-bottom-color: #334155;
    }

    :global(body.dark-mode) .modal-header h2 {
        color: #f1f5f9;
    }

    :global(body.dark-mode) .close-button {
        color: #94a3b8;
    }

    :global(body.dark-mode) .close-button:hover {
        background: #334155;
        color: #f1f5f9;
    }

    :global(body.dark-mode) .settings-section h3 {
        color: #e2e8f0;
    }

    :global(body.dark-mode) .section-description,
    :global(body.dark-mode) .setting-description {
        color: #94a3b8;
    }

    :global(body.dark-mode) .section-divider {
        background: #334155;
    }

    :global(body.dark-mode) .setting-label {
        color: #e2e8f0;
    }

    :global(body.dark-mode) .theme-cycle-button {
        background: #1e293b;
        border-color: #334155;
    }

    :global(body.dark-mode) .theme-cycle-button:hover {
        border-color: #64748b;
        background: #334155;
    }

    :global(body.dark-mode) .theme-label {
        color: #e2e8f0;
    }

    :global(body.dark-mode) .target-days-input,
    :global(body.dark-mode) .week-select,
    :global(body.dark-mode) .week-label-input {
        background: #1e293b;
        border-color: #334155;
        color: #e2e8f0;
    }

    :global(body.dark-mode) .radio-text {
        color: #cbd5e1;
    }

    :global(body.dark-mode) .radio-label:hover {
        background: #334155;
    }

    :global(body.dark-mode) .action-button.secondary {
        background: #1e293b;
        border-color: #334155;
        color: #cbd5e1;
    }

    :global(body.dark-mode) .action-button.secondary:hover {
        background: #334155;
        border-color: #64748b;
    }

    :global(body.dark-mode) .add-label-button {
        background: #64748b;
    }

    :global(body.dark-mode) .add-label-button:hover {
        background: #94a3b8;
    }
</style>

<script>
    import { settingsManager } from '../scripts/settings-modal';
    import { cycleTheme, getCurrentTheme, getThemeManager } from '../lib/themeManager';

    const dialog = document.getElementById('settings-dialog') as HTMLDialogElement;
    const closeButton = dialog?.querySelector('.close-button');
    const themeCycleButton = document.getElementById('theme-cycle-button');
    const themeIcon = document.getElementById('theme-icon');
    const themeLabel = document.getElementById('theme-label');

    const THEME_ICONS: Record<string, string> = {
        system: 'üñ•Ô∏è',
        light: '‚òÄÔ∏è',
        dark: 'üåô',
    };

    const THEME_LABELS: Record<string, string> = {
        system: 'System',
        light: 'Light',
        dark: 'Dark',
    };

    function updateThemeDisplay(theme: string): void {
        if (themeIcon) {
            themeIcon.textContent = THEME_ICONS[theme] || 'üñ•Ô∏è';
        }
        if (themeLabel) {
            themeLabel.textContent = THEME_LABELS[theme] || 'System';
        }
    }

    // Subscribe to theme changes
    const themeManager = getThemeManager();
    themeManager.subscribe((state) => {
        updateThemeDisplay(state.currentTheme);
    });

    // Initialize display
    updateThemeDisplay(getCurrentTheme());

    // Handle theme cycling
    themeCycleButton?.addEventListener('click', () => {
        cycleTheme();
    });

    // Modal open/close
    closeButton?.addEventListener('click', () => {
        dialog.close();
    });

    dialog?.addEventListener('click', (e) => {
        if (e.target === dialog) {
            dialog.close();
        }
    });

    // Initialize settings
    if (settingsManager) {
        settingsManager.initialize();
    }
</script>
