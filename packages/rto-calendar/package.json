{
	"name": "datepainter",
	"version": "1.0.0",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./styles/calendar.css": "./dist/styles/calendar.css",
		"./styles/base.css": "./dist/styles/base.css",
		"./styles/astro.css": "./dist/styles/astro.css",
		"./styles/vanilla.css": "./dist/styles/vanilla.css",
		"./styles/themes.css": "./dist/styles/themes.css",
		"./Calendar.astro": "./dist/components/Calendar.astro"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsup && npm run copy:styles",
		"copy:styles": "mkdir -p dist/styles && cp -r styles/* dist/styles/",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"lint": "biome check src/",
		"lint:fix": "biome check --write src/"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"dependencies": {
		"nanostores": "1.1.0"
	},
	"peerDependencies": {
		"astro": "4.16.12"
	},
	"devDependencies": {
		"tsup": "^8.0.0",
		"typescript": "5.7.2",
		"vitest": "2.1.8",
		"@vitest/ui": "2.1.8",
		"@biomejs/biome": "1.9.4"
	}
}
