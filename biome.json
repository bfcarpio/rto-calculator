{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": ["**", "!nager.date"]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "warn"
			},
			"style": {
				"noDefaultExport": "off",
				"useImportType": "warn"
			}
		}
	},
	"overrides": [
		{
			"includes": ["**/*.svelte", "**/*.astro", "**/*.vue"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					},
					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedImports": "off"
					}
				}
			}
		},
		{
			"includes": [
				"**/__tests__/**",
				"**/*.test.ts",
				"**/*.test.tsx",
				"**/*.test.js",
				"**/*.test.jsx",
				"**/*.spec.ts",
				"**/*.spec.tsx",
				"**/*.spec.js",
				"**/*.spec.jsx"
			],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					},
					"style": {
						"noNonNullAssertion": "off"
					}
				}
			}
		},
		{
			"includes": ["**/__tests__/**"],
			"linter": {
				"rules": {
					"suspicious": {
						"useIterableCallbackReturn": "off"
					}
				}
			}
		}
	]
}
