{
	"extends": "astro/tsconfigs/strictest",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": [
		"dist",
		"node_modules",
		"playwright-report",
		"nager.date",
		"test-results"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@components/*": ["./src/components/*"],
			"@lib/*": ["./src/lib/*"],
			"@utils/*": ["./src/utils/*"],
			"@scripts/*": ["./src/scripts/*"],
			"@styles/*": ["./src/styles/*"]
		}
	}
}
