{
	"name": "rto-calculator",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "astro dev",
		"build": "astro check && astro build",
		"preview": "astro preview",
		"astro": "astro",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"test:e2e": "./scripts/start-playwright-server.sh --detach && playwright test",
		"test:e2e:ui": "./scripts/start-playwright-server.sh --detach && playwright test --ui",
		"test:e2e:debug": "./scripts/start-playwright-server.sh --detach && playwright test --debug",
		"test:e2e:raw": "playwright test",
		"test:e2e:server": "./scripts/start-playwright-server.sh",
		"test:e2e:mobile": "./scripts/start-playwright-server.sh --detach && playwright test --project=chromium-mobile",
		"test:e2e:desktop": "./scripts/start-playwright-server.sh --detach && playwright test --project=chromium-desktop",
		"test:e2e:report": "playwright show-report",
		"lint": "biome check src/",
		"lint:fix": "biome check --write src/",
		"format": "biome format --write src/",
		"check": "biome check src/ && astro check"
	},
	"dependencies": {
		"@astrojs/check": "^0.9.6",
		"astro": "^5.16.8",
		"bulma": "^1.0.4",
		"flatpickr": "^4.6.13",
		"nager_date_api_reference": "file:nager.date",
		"open-props": "^1.7.23",
		"ts-ics": "^2.4.0",
		"typescript": "^5.9.3"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@playwright/test": "^1.57.0",
		"@types/node": "^25.0.9",
		"@vitest/ui": "^4.0.17",
		"jsdom": "^27.4.0",
		"vitest": "^4.0.17"
	}
}
